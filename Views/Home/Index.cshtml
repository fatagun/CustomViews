    <img id="deferme" src="data:image/png;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" data-src="https://upload.wikimedia.org/wikipedia/commons/3/3d/LARGE_elevation.jpg">

    <script>
        function init()
        {
            var imgDefer = document.getElementById('deferme');

            if(imgDefer.getAttribute('data-src')) 
